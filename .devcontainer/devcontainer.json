// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/javascript-node
{
	"name": "Node.js",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"build": {
		"dockerfile": "Dockerfile"
	},
	"features": {
		"ghcr.io/devcontainers/features/github-cli:1": {},
		"ghcr.io/devcontainers-extra/features/npm-package:1": {}
	},
	"workspaceFolder": "/workspace",
	"mounts": [
		"source=${localWorkspaceFolder},target=/workspace,type=bind",
		"source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
	],
	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	// "postCreateCommand": "",

	// Configure fvtt on container start
	"postStartCommand": "if [ -x /opt/foundryvtt/foundryvtt ]; then echo '\n\nâœ“ Foundry VTT installed successfully'; fvtt configure set installPath /opt/foundryvtt && fvtt configure set dataPath /workspace/data && fvtt package workon \"$(jq -r '.id' /workspace/module.json)\" --type \"Module\"; else echo '\n\nâš  FoundryVTT-Linux-*.zip not found in .devcontainer directory - Foundry VTT not installed'; fi",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				// "redhat.vscode-yaml",
				"github.copilot",
				"github.copilot-chat",
				"pkief.material-icon-theme",
				"ms-azuretools.vscode-docker",
				"seunlanlege.action-buttons"
			],
			"settings": {
				"terminal.integrated.defaultProfile.linux": "bash",
				"workbench.iconTheme": "material-icon-theme",
				"explorer.compactFolders": false,
				"actionButtons": {
					"defaultColor": "#ff0034",
					"loadNpmCommands": false,
					"reloadButton": null,
					"commands": [
						{
							"cwd": "/workspace",
							"name": "ðŸ”“ Unpack All",
							"color": "green",
							"singleInstance": true,
							"command": "./unpack.sh"
						},
						{
							"cwd": "/workspace",
							"name": "ðŸ“¦ Pack All",
							"color": "blue",
							"singleInstance": true,
							"command": "./pack.sh"
						},
						{
							"cwd": "/workspace",
							"name": "ðŸ§¹ Clean & Copy",
							"color": "orange",
							"singleInstance": true,
							"command": "./clean.sh"
						},
						{
							"cwd": "/workspace",
							"name": "ðŸš€ Launch Foundry",
							"color": "purple",
							"singleInstance": true,
							"command": "fvtt launch"
						}
					]
				}
			}
		}
	},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	"remoteUser": "root"
}
